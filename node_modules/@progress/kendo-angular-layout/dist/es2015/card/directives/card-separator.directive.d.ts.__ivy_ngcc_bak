import { Orientation } from '../../common/orientation';
/**
 * Specifies a separator in the content of the Card.
 */
export declare class CardSeparatorDirective {
    hostClass: boolean;
    readonly verticalClass: boolean;
    readonly horizontalClass: boolean;
    /**
     * Sets the color of the Card separator.
     */
    color: string;
    /**
     * Specifies the orientation of the Card separator.
     *
     * The possible values are:
     * (Default) `horizontal`
     * `vertical`
     */
    orientation: Orientation;
}
